#page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #eee;
}
.topBtns {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ee7b2d;
}
.topBtns .like, .topBtns .collect {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
.topBtns .share {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.video {
  width: 100%;
  position: relative;
}
.video video {
  width: 100%;
}
.video .image {
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  position: absolute;
  height: 100%;
  background-position: center center;
  background-size: 100% 100%;
}
.video .background {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.video .text {
  font-size: 30rpx;
  margin: 30rpx;
  color: white;
}
.video .btn {
  font-size: 30rpx;
  font-weight: bold;
  width: 30%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #edd6b3;
  color: #76401f;
  border-radius: 50rpx;
}
.detailInfo {
  width: 100%;
  background-color: white;
  padding-bottom: 50rpx;
  margin-bottom: 20rpx;
}
.detailInfo .title {
  text-align: center;
  font-size: 32rpx;
  padding: 30rpx;
}
.openVip {
  margin: 30rpx auto;
  width: 85%;
  padding: 30rpx;
  color: white;
  background-color: #eec074;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.detailText {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}
.detailText .item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
}
.detailText .item image {
  width: 30rpx;
  height: 30rpx;
}
.detailText .item text {
  margin-right: 10rpx;
}
.detailText .item:first-child {
  color: #ed6786;
}
.ingredients {
  background-color: white;
  padding: 0 30rpx;
}
.ingredients .title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}
.ingredients .title .item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx;
}
.ingredients .title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.ingredients .list {
  padding-bottom: 60rpx;
}
.ingredients .list .item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 2rpx solid #ccc;
  font-size: 28rpx;
  color: #666;
}
.ingredients .list .item view {
  width: 50%;
}
.listHead {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  padding-top: 0;
}
.listHead .text {
  font-size: 30rpx;
}
.listHead .btn {
  font-size: 30rpx;
  color: #999;
}
.listHead .active {
  color: #ee7b2d;
}
.method {
  padding: 30rpx;
  background-color: white;
  border-top: 2rpx solid #ccc;
}
.method .background {
  padding: 30rpx;
  border-radius: 10rpx;
  background-color: #eee;
}
.method text {
  font-size: 30rpx;
  font-weight: bold;
}
.method .item {
  margin: 20rpx 0;
}
.method .item .title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.method .item .text {
  font-size: 24rpx;
  color: #666;
  margin: 20rpx 20rpx 0;
}
.footer {
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
}
.footer > .title {
  font-size: 30rpx;
  padding: 20rpx 0;
  padding-left: 40rpx;
}
.recommend {
  width: 100%;
  padding: 30rpx;
  padding-top: 0;
  box-sizing: border-box;
}
.recommend uni-grid-item {
  box-sizing: border-box;
  border-radius: 15rpx;
}
.recommend uni-grid-item  .uni-grid-item__box {
  padding: 10rpx;
  box-sizing: border-box;
}
.recommend uni-grid-item image {
  border-radius: 15rpx;
  width: 100%;
  height: 248rpx;
}
.recommend uni-grid-item .title {
  color: #333;
  margin-top: 10rpx;
  font-size: 28rpx;
}
.recommend uni-grid-item .bottom {
  font-size: 22rpx;
  color: #ccc;
  display: flex;
}
.recommend uni-grid-item .bottom .left, .recommend uni-grid-item .bottom .right {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}
.recommend uni-grid-item .bottom .left text, .recommend uni-grid-item .bottom .right text {
  margin-right: 10rpx;
}
.recommend uni-grid-item .bottom .left {
  margin-right: 64rpx;
}

