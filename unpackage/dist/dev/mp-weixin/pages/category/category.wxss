#page {
  background-color: #ee7b2d;
  height: 100vh;
}
.btns {
  width: 380rpx;
  height: 60rpx;
  margin: 0 auto;
  border: 5rpx solid white;
  border-radius: 35rpx;
}
.btns text {
  font-size: 30rpx;
  color: white;
  display: inline-block;
  text-align: center;
  line-height: 60rpx;
  width: 50%;
}
.btns .active {
  background-color: white;
  border-radius: 30rpx;
  color: #ee7b2d;
}
.category-list {
  width: 100%;
  background-color: #fff;
  display: flex;
  color: #999;
}
.category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f2f2f2;
  height: calc(100vh - 182rpx);
}
.category-list .right {
  width: 76%;
  left: 24%;
  height: calc(100vh - 182rpx);
}
.row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-left: 10rpx solid #f2f2f2;
  box-sizing: border-box;
}
.row .text {
  width: 100%;
  position: relative;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  color: #3c3c3c;
}
.row.on {
  height: 100rpx;
  background-color: #fff;
  border-left: 10rpx solid #ee7b2d;
}
.row.on .text {
  font-size: 25rpx;
  font-weight: 600;
  color: #ee7b2d;
}
.category {
  width: 94%;
  padding: 20rpx 3%;
}
.category .title {
  font-size: 30rpx;
}
.category .list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.box {
  width: calc(71.44vw / 3);
  flex-wrap: wrap;
}
.box navigator {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}
.box navigator image {
  width: 60%;
  height: calc(71.44vw / 3 * 0.6);
  border-radius: 10rpx;
}
.box navigator .text {
  margin-top: 5rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 23rpx;
}

